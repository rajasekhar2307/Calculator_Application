<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content" >-->

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="none">

                <EditText
                    android:id="@+id/text_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:background="@null"
                    android:singleLine="true"
                    android:textSize="62dp"
                    android:text=""
                    android:textColor="#363737"
                    android:gravity="bottom | right"
                    android:padding="25dp"
                    />
<!--                    android:singleLine="true"-->
<!--                    android:scrollHorizontally="true"-->
<!--                    android:gravity="bottom | right"-->
<!--                    android:padding="20dp"-->
<!--                    android:text=""-->
<!--                    android:textSize="62dp"-->
<!--                    android:textColor="#363737"/>-->
            </ScrollView>
<!--        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:minHeight="100dp">

            <Button
                android:id="@+id/btn_clear"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:backgroundTint="#fff"
                android:text="C"
                android:textColor="#ff0000"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_percentile"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:backgroundTint="#fff"
                android:text="%"
                android:textColor="#003399"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_pow"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:backgroundTint="#fff"
                android:text="^"
                android:textColor="#003399"
                android:textSize="27dp" />

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="11dp"
                android:layout_height="100dp"
                android:layout_weight="1.0"
                android:adjustViewBounds="true"
                android:backgroundTint="#fff"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/back" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:minHeight="100dp">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:text="7"
                android:textSize="30dp"
                android:backgroundTint="#fff"
                android:textColor="#262b2f"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                android:layout_weight="1.0"
                android:textSize="30dp"
                android:backgroundTint="#fff"
                android:textColor="#262b2f"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:layout_weight="1.0"
                android:textSize="30dp"
                android:backgroundTint="#fff"
                android:textColor="#262b2f"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/btn_multiply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*"
                android:layout_weight="1.0"
                android:textSize="30dp"
                android:backgroundTint="#fff"
                android:textColor="#003399"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/btn_openparanthesis"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="("
                android:layout_weight="1.0"
                android:textSize="30dp"
                android:backgroundTint="#fff"
                android:textColor="#003399"
                style="?android:attr/borderlessButtonStyle"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:minHeight="100dp"
            >

            <Button
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:layout_weight="1.0"
                android:textSize="30dp"
                android:backgroundTint="#fff"
                android:textColor="#262b2f"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:layout_weight="1.0"
                android:textSize="30dp"
                android:backgroundTint="#fff"
                android:textColor="#262b2f"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:layout_weight="1.0"
                android:textSize="30dp"
                android:backgroundTint="#fff"
                android:textColor="#262b2f"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/btn_divide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/"
                android:layout_weight="1.0"
                android:textSize="30dp"
                android:backgroundTint="#fff"
                android:textColor="#003399"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/btn_closeparenthesis"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=")"
                android:layout_weight="1.0"
                android:textSize="30dp"
                android:backgroundTint="#fff"
                android:textColor="#003399"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:minHeight="100dp">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:layout_weight="1.0"
                android:textSize="30dp"
                android:backgroundTint="#fff"
                android:textColor="#262b2f"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:layout_weight="1.0"
                android:textSize="30dp"
                android:backgroundTint="#fff"
                android:textColor="#262b2f"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:layout_weight="1.0"
                android:textSize="30dp"
                android:backgroundTint="#fff"
                android:textColor="#262b2f"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+"
                android:layout_weight="1.0"
                android:textSize="30dp"
                android:backgroundTint="#fff"
                android:textColor="#003399"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/btn_empty1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" "
                android:layout_weight="1.0"
                android:textSize="30dp"
                android:backgroundTint="#fff"
                android:textColor="#262b2f"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:minHeight="100dp">


            <Button
                android:id="@+id/btn_0"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="111dp"
                android:layout_height="match_parent"
                android:layout_weight="2.0"
                android:backgroundTint="#fff"
                android:text="0"
                android:textColor="#262b2f"
                android:textSize="30dp" />
            <Button
                android:id="@+id/btn_decimal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="."
                android:layout_weight="1.0"
                android:textSize="30dp"
                android:backgroundTint="#fff"
                android:textColor="#262b2f"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/btn_subtract"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:layout_weight="1.0"
                android:textSize="30dp"
                android:backgroundTint="#fff"
                android:textColor="#003399"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/btn_equals"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:backgroundTint="#bfefff"
                android:text="="
                android:textColor="#262b2f"
                android:textSize="30dp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>